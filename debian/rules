#!/usr/bin/make -f

include /usr/share/dpkg/pkg-info.mk

#export DH_VERBOSE=1
export DH_GOPKG := github.com/google/mtail

export DH_GOLANG_INSTALL_EXTRA := examples/ testdata/

export DH_GOLANG_EXCLUDES := emgen

BUILDDIR := $(CURDIR)/build

%:
	dh $@ --buildsystem=golang --with=golang --builddirectory=$(BUILDDIR) -ldflags="-X main.Version=$(DEB_UPSTREAM_VERSION) -X main.Revision=debian-$(DEB_VERSION)"

override_dh_auto_test:
	GOPATH=$(BUILDDIR) go test -v -timeout 60s $(DH_GOPKG)
ifeq ($(DEB_HOST_ARCH_CPU),amd64)
	GOPATH=$(BUILDDIR) go test -v -timeout 5m -race $(DH_GOPKG)
endif
	make regtest

override_dh_auto_install:
	dh_auto_install -- --no-source
